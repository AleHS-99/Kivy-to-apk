<ScaleBox>
    canvas.before:
        PushMatrix
        Scale:
            x: root.scale
            y: root.scale
            z: root.scale
            origin: self.center
    canvas.after:
        PopMatrix

MDScreen:
    name: 'login'
    FitImage:
        source: "assets/bg.png"

    MDCard:
        id: box
        size_hint: .8, .8
        pos_hint: {"center_x": .5, "center_y": .5}
        radius: [20,]
        md_bg_color: 0, 0, 0, .8

        ScaleBox:
            id: fingerprint_enabled_box
            orientation: "vertical"
            spacing: "32dp"
            radius: [20,]
            pos_hint: {"center_x": .5, "center_y": .5}
            FitImage:
                source: "assets/hero.jpg"
                radius: [20,0,0,20]



        ScaleBox:
            id: start_uding_fingerprint_box
            orientation: "vertical"
            adaptive_height: True
            spacing: "32dp"
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Inicio de Seión Sistema InvManager"
                text_color: 0,0,0,0
                font_style: "H5"
                adaptive_size: True
                pos_hint: {"center_x": .5}

            Widget:
                size_hint_y: None
                height: "36dp"

            MDTextField:
                id: user
                hint_text: "Usuario"
                hint_text_color_normal: "white"
                text_color_normal: "white"
                text_color_focus: "white"
                line_color_normal: 'white'
                size_hint_x: .9
                pos_hint: {"center_x": .5}

            MDTextField:
                id: password
                hint_text: "Contraseña"
                password: True
                hint_text_color_normal: "white"
                text_color_normal: "white"
                text_color_focus: "white"
                line_color_normal: 'white'
                size_hint_x: .9
                pos_hint: {"center_x": .5}

            Widget:
                size_hint_y: None
                height: "36dp"

            MDRoundFlatButton:
                id: lg_btn
                text: "Iniciar Sesión"
                text_color: "white"
                pos_hint: {"center_x": .5}
                line_width: 1.2








